<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/img"
    android:background="@drawable/whatsapp"
    android:gravity="center"
    android:orientation="vertical"



    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="MATRIX CALCULATOR"
        android:layout_marginBottom="100dp"
        android:textStyle="bold"
        android:textColor="#F40202"
        android:textSize="30sp"


        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="Solution of linear equation"
        android:textStyle="bold"


        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:text="Addition of two matrix"
        android:textStyle="bold"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="Subtration of two matrix"
        android:textStyle="bold"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:text="Multiplication of two matrix"
        android:textStyle="bold"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        android:text="Determinant of a matrix"
        android:textStyle="bold"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn6"
        android:text="Transpose of matrix"
        android:textStyle="bold"

        />




</LinearLayout>